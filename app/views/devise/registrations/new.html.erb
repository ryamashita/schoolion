<div class="row">
  <div class="col m6 offset-m3 center" style="padding-top: 30px;">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render partial: "shared/devisemes" %>

      <div class="input-field">
        <%= f.text_field :name, autofocus: true, :class => "validate", :placeholder => "名前" %>
      </div>

      <div class="input-field">
        <%= f.email_field :email, :class => "validate", :placeholder => "メールアドレス" %>
      </div>

      <div class="input-field">
        <%= f.password_field :password, autocomplete: "off", :class => "validate", :placeholder => "パスワード" %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">会員登録</button>
    <% end %>

    <br/>
    <p>もしくは</p>
    <br/>

    <%= link_to "Googleで会員登録", user_omniauth_authorize_path(:google_oauth2), class: "btn red darken-1" %>
    <br/><br/>
    <%= link_to "Twitterで会員登録", user_omniauth_authorize_path(:twitter), class: "btn btn-info" %>
    <br/><br/>
    <%= link_to "Facebookで会員登録", user_omniauth_authorize_path(:facebook), class: "btn btn-primary" %> 
    
  </div>
</div>
