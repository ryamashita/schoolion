<div class="row">
  <div class="col m6 offset-m3 center" style="padding-top: 30px;">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render partial: "shared/devisemes" %>

      <div class="input-field">
        <%= f.email_field :email, :id => "email", :class => "validate", :placeholder => "メールアドレス" %>
      </div>

      <div class="input-field">
        <%= f.password_field :password, :id => "email", :class => "validate", :placeholder => "パスワード", autocomplete: "off" %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">ログイン</button>
      <%= link_to "パスワードの再発行", new_user_password_path, :class => "btn waves-effect waves-light" %>
    <% end %>

    <br/>
    <p>もしくは</p>
    <br/>


    <%= link_to "Googleでログイン", user_omniauth_authorize_path(:google_oauth2), class: "btn red darken-1" %>
    <br/><br/>
  </div>
</div>
