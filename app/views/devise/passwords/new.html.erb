<div class="row">
  <div class="col m6 offset-m3 center" style="padding-top: 30px;">

    <h5>パスワードの再発行</h5>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render partial: "shared/devisemes" %>

      <div class="input-field">
        <%= f.email_field :email, :id => "email", :placeholder => "メールアドレス", autofocus: true %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">メール送信</button>
    <% end %>

  </div>
</div>
